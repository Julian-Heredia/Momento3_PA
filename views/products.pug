extends layout.pug

block hero
    sectio.hero-style
        .hero-body
            .container(style="text-align:center;")
                h1.textwhite Shopy
                h2.textwhite awesome products!!

//- footer queda debajo
block content
    .container(style="flex: 1; padding: 50px 0;")    
        .columns.is-multiline
           

            //-each product in productMocks
            each product in products
                .column.is-one-quarter
                    .card(style)
                        .card-image
                            figure.image(style="height: 190px")
                                img(src=product.image style="height: 100%; object-fit: contain; object-position:50% 30%")
                        .card-content
                            h1.title= product.name
                            .button.is-fullwidth(style="background-color: green;")
                                span.icon
                                    i.fas.fa-shopping-cart
                                span Add 
                                    strong= `${product.price} USD`
                                    .column-end
                                     